<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-4">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Change your password</h2>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="form-group mb-3">
              <%= f.label :password, "New password", class: "form-label" %>
              <%= f.password_field :password, class: "form-control custom-btn", required: true, autofocus: true, autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">Minimum <%= @minimum_password_length %> characters</small>
              <% end %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password_confirmation, "Confirm your new password", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control custom-btn", required: true, autocomplete: "new-password" %>
            </div>

            <div class="text-center">
              <%= f.button :submit, "Change my password", class: "btn btn custom-btn rounded-pill px-5" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
