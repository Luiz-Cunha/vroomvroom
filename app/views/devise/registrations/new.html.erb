<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-4">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Sign up</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "row g-3" }) do |f| %>
            <%= f.error_notification %>

            <div class="form-group mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control  custom-btn", required: true, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control custom-btn", required: true, autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">Minimum <%= @minimum_password_length %> characters</small>
              <% end %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control  custom-btn", required: true, autocomplete: "new-password" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control  custom-btn", required: true, autocomplete: "name" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :username, class: "form-label" %>
              <%= f.text_field :username, class: "form-control  custom-btn", required: true, autocomplete: "username" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :age, class: "form-label" %>
              <%= f.number_field :age, class: "form-control custom-btn", required: true, autocomplete: "age" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :address, class: "form-label" %>
              <%= f.text_field :address, class: "form-control custom-btn", required: true, autocomplete: "address" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :photo, class: "form-label" %>
              <%= f.file_field :photo, class: "form-control custom-btn" %>
            </div>

            <div class="text-center">
              <%= f.button :submit, "Sign up", class: "btn btn-primary rounded-pill px-5 custom-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
