<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-4">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "row g-3" }) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control custom-btn", required: false, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: "form-label " %>
              <%= f.password_field :password, class: "form-control custom-btn", required: false, autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input custom-btn" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.button :submit, "Log in", class: "btn btn-primary rounded-pill px-5 custom-btn" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
