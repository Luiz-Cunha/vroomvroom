<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1558981420-87aa9dad1c89?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1>Making your trips more radical!</h1>
    <p>Rent the ride of your dreams and hit the road with <strong>VroomVroom!<strong></p>
  </div>
</div>

<div class="flexbox">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: motorcycles_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query, params[:query], class: "form-control rounded-pill", placeholder: "Type a keyword" %>
        <%= submit_tag "Search", name: "", class: "btn btn rounded-pill custom-btn" %>
      <% end %>
    </div>
  </div>
  <i class="fa-regular fa-calendar-check fa-5x"></i>
  <i class="fa-solid fa-motorcycle fa-5x"></i>
</div>


<hr>
<div class="container mt-5 vh-100">
<div class="cards">
  <% @motorcycles.each do |motorcycle| %>
    <div class="card m-2">
      <div class="card-header position-relative">
        <% if motorcycle.photo.key.present? %>
          <%= link_to motorcycle_path(motorcycle) do%>
            <%= cl_image_tag(motorcycle.photo.key, class: "card-img-top card-image") %>
          <% end %>
        <% end %>
        <% if current_user && current_user.id == motorcycle.user_id %>
          <div class="icon-container">
            <%= link_to edit_motorcycle_path(motorcycle), class: "icon-link" do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to motorcycle_path(motorcycle), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "icon-link" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= motorcycle.description %></h5>
        <ul class="list-unstyled">
          <li><strong>Make:</strong> <%= motorcycle.make %></li>
          <li><strong>Model:</strong> <%= motorcycle.model %></li>
          <li><strong>Year:</strong> <%= motorcycle.year %></li>
          <li><strong>Address:</strong> <%= motorcycle.user.address %></li>
        </ul>
      </div>
    </div>
  <% end %>
</div>

</div>
